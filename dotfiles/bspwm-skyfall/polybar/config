[colors]
background = ${xrdb:background:#000000}
foreground = ${xrdb:foreground:#000000}

[bar/top]
modules-left = user
modules-center = datetime
modules-right = wired wireless backlight battery

module-margin = 1.5

fixed-center = true
height = 27
padding = 3

background = ${colors.background}
foreground = ${colors.foreground}

font-0 = "Fira Mono:size=9;3"

[module/backlight]
type = internal/backlight
card = intel_backlight
label = %percentage%%

[module/battery]
type = internal/battery
full-at = 99
adapter = AC
battery = BAT0
poll-interval = 0
label-charging = %percentage%%
label-discharging = %percentage%%

[module/datetime]
type = internal/date
interval = 1.0
date = %a %b %e
time = %I:%M %p
format = <label>
label = %date%, %time%

[module/user]
type = custom/script
exec = echo "User: $USER@$HOSTNAME"

[module/wired]
type = internal/network
interface = enp0s25
label-connected = enp0s25: %local_ip%

[module/wireless]
type = internal/network
interface = wlp3s0
label-connected = W: %essid%
